<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.content2.DrawRoundActivity">
    <include android:id="@+id/include_tool_bar"
             layout="@layout/simple_tool_bar"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  app:layout_constraintTop_toBottomOf="@id/include_tool_bar"
                  android:orientation="vertical"
                  android:padding="10dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent">

        <syl.com.kotlindemo2.widget.RoundLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="入群须知"
                    android:textColor="@color/black"
                    android:textSize="25sp"/>

            <syl.com.kotlindemo2.widget.RoundTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="新入群的朋友请注意，入群时先向大家问好，然后自报姓名、性别、年龄、身高、体重、职业，最重要的一点是：自己上传照片！"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>
        </syl.com.kotlindemo2.widget.RoundLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>